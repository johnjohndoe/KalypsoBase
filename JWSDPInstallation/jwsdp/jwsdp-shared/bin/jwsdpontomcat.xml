      <replacetoken><![CDATA[%JAXWS_HOME%\lib\jaxws-tools.jar ]]></replacetoken>
     <replacevalue><![CDATA[%JAXWS_HOME%\lib\jaxws-rt.jar;%JAXWS_HOME%\lib\jaxws-tools.jar;%JAXWS_HOME%\..\jaxb\lib\jaxb-xjc.jar;%JAXWS_HOME%\..\jwsdp-shared\lib\relaxngDatatype.jar;%JAXWS_HOME%\..\jwsdp-shared\lib\resolver.jar]]></replacevalue>
   </replace>

