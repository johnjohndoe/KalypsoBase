  </target>

  <target name="integrate.jaxws" depends="init"
    description="Integrating JAXWS into Tomcat">

    <echo message="Copying JAXWS jar files to ${CATALINA_HOME}/jaxws" />

    <copy todir="${CATALINA_HOME}/jaxws">
      <fileset dir="${JWSDP_HOME}/jaxws">
      </fileset>
    </copy>
    
    <antcall target="update-jaxws-scripts.sh" />
