    <copy todir="${CATALINA_HOME}/saaj">
      <fileset dir="${JWSDP_HOME}/saaj">
      </fileset>
    </copy>

    <!-- Integrate saaj webapps -->
    <antcall target="deploy.saaj.webapps" />

  </target>

  <target name="deploy.saaj.webapps" depends="init"
    description="Deploying SAAJ into Tomcat">

