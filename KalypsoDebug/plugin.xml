<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.kalypso.debug"
   name="KalypsoDebug Plug-in"
   version="1.0.0"
   provider-name="kalypso.org"
   class="org.kalypso.debug.KalypsoDebugPlugin">

   <runtime>
      <library name="KalypsoDebug.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.kalypso.ui"/>
      <import plugin="org.kalypso.jwsdp"/>
      <import plugin="org.kalypso.contribs.eclipseplatform"/>
   </requires>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Kalypso Debug"
            id="org.kalypso.view.debug"/>
      <view
            allowMultiple="false"
            class="org.kalypso.debug.view.PoolView"
            category="org.kalypso.view.debug"
            name="Resource Pool"
            id="org.kalypso.debug.view.pool"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            launcher="org.kalypso.debug.editor.GmlConvertLauncher"
            default="false"
            name="GML Converter"
            id="org.kalypso.debug.editor.gmlconvert"
            extensions="gmc"/>
   </extension>
   <extension
         point="org.kalypso.core.obsManipulator">
      <obsManipulator class="org.kalypso.debug.zml.SimpleWQTableObsManipulator"/>
   </extension>
</plugin>
