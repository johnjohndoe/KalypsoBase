<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:map="http://org.kalypso.updateObservationMapping" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gml="http://www.opengis.net/gml" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:obslink="obslink.zml.kalypso.org" targetNamespace="http://org.kalypso.updateObservationMapping" elementFormDefault="qualified" version="1.0">
	<import namespace="http://www.opengis.net/gml" schemaLocation="feature.xsd" />
	<import namespace="obslink.zml.kalypso.org" schemaLocation="obslink.xsd" />

	<annotation>
		<appinfo xmlns:kapp="org.kalypso.appinfo">
			<kapp:gmlVersion>2.1.2</kapp:gmlVersion>
		</appinfo>
	</annotation>

	<!-- Root Element & Type -->
	<element name="MappingCollection" type="map:MappingCollectionType" />
	<complexType name="MappingCollectionType">
		<complexContent>
			<restriction base="gml:AbstractFeatureCollectionType">
				<sequence>
					<element name="mappingMember" type="map:MappingAssociationType" minOccurs="0" maxOccurs="unbounded" />
					<element name="Configuration" type="map:ConfigurationType" minOccurs="0" maxOccurs="1" />
				</sequence>
			</restriction>
		</complexContent>
	</complexType>

	<!-- Mapping Association Type -->
	<complexType name="MappingAssociationType">
		<complexContent>
			<restriction base="gml:FeatureAssociationType">
				<sequence>
					<element ref="map:MappingObservation" />
				</sequence>
			</restriction>
		</complexContent>
	</complexType>

	<!-- Configuration Type -->
	<complexType name="ConfigurationType">
		<complexContent>
			<extension base="gml:AbstractFeatureType">
				<sequence>
					<element name="sourceMember" type="map:SourcePropertyType" minOccurs="1" maxOccurs="unbounded" />
					<element name="Target" type="map:TargetType" minOccurs="1" maxOccurs="1" />
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<!-- Mapping Observation Element & Type -->
	<element name="MappingObservation" type="map:MappingObservationType" substitutionGroup="gml:_Feature" />
	<complexType name="MappingObservationType">
		<complexContent>
			<extension base="gml:AbstractFeatureType">
				<sequence>
					<element name="point" type="gml:PointPropertyType" substitutionGroup="gml:_Geometry" minOccurs="0">
						<annotation>
							<documentation xml:lang="de">
								<label>Punktgeometrie</label>
								<tooltip>geometriescher Ort</tooltip>
								<description>Geometrie des Objektes</description>
							</documentation>
							<documentation xml:lang="en">
								<label>point geometry</label>
								<tooltip>geometric position</tooltip>
								<description>Geometry of the Object</description>
							</documentation>
						</annotation>
					</element>
					<element name="lineString" type="gml:LineStringPropertyType" substitutionGroup="gml:_Geometry" minOccurs="0">
						<annotation>
							<documentation xml:lang="de">
								<label>Liniengeometrie</label>
								<tooltip>geometriescher Ort</tooltip>
								<description>Geometrie des Objektes</description>
							</documentation>
							<documentation xml:lang="en">
								<label>line geometry</label>
								<tooltip>geometric position</tooltip>
								<description>Geometry of the Object</description>
							</documentation>
						</annotation>
					</element>
					<element name="polygon" type="gml:PolygonPropertyType" substitutionGroup="gml:_Geometry" minOccurs="0">
						<annotation>
							<documentation xml:lang="de">
								<label>Polygongeometrie</label>
								<tooltip>geometriescher Ort</tooltip>
								<description>Geometrie des Objektes</description>
							</documentation>
							<documentation xml:lang="en">
								<label>polygon geometry</label>
								<tooltip>geometric position</tooltip>
								<description>Geometry of the Object</description>
							</documentation>
						</annotation>
					</element>
					<!-- some fields for in observation -->
					<element name="inObservationLink" type="obslink:TimeseriesLinkFeatureProperty">
						<annotation>
							<documentation xml:lang="de">
								<label>Pfad ZR (Original)Ablage</label>
								<tooltip>Pfad Zeitreihe Originalablage</tooltip>
								<description>Pfad der Zeitreihe aus der Datenablage (lokal, Datenbank, Server...)</description>
							</documentation>
							<documentation xml:lang="en">
								<label>TS Repository</label>
								<tooltip>path TS Repository</tooltip>
								<description>path of time series in the repository (local, database, server,...)</description>
							</documentation>
						</annotation>
					</element>
					<element name="in1ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="in2ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="in3ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<!-- some fields for out observation -->
					<element name="outObservationLink" type="obslink:TimeseriesLinkFeatureProperty">
						<annotation>
							<documentation xml:lang="de">
								<label>ZR Zielpfad (Rechenvariante)</label>
								<tooltip>Pfad ZR Rechenfall</tooltip>
								<description>Zielpfad der Zeitreihe in der Rechenvariante</description>
							</documentation>
							<documentation xml:lang="en">
								<label>TS target</label>
								<tooltip>path TS target directory</tooltip>
								<description>path of time series in the calculation case</description>
							</documentation>
						</annotation>
					</element>
					<element name="out1ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="out2ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="out3ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="out4ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="out5ObservationLink" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<!-- some fields for local observation -->
					<element name="local1" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="local2" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="local3" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="local4" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="local5" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<!-- some fields for remote observation -->
					<element name="remote1" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote2" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote3" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote4" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote5" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote6" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote7" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote8" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
					<element name="remote9" type="obslink:TimeseriesLinkFeatureProperty" minOccurs="0" />
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<!-- Source Property Type -->
	<complexType name="SourcePropertyType">
		<sequence minOccurs="0">
			<element ref="map:Source" />
		</sequence>
	</complexType>

	<!-- Source Element & Type -->
	<element name="Source" type="map:SourceType" />
	<complexType name="SourceType">
		<complexContent>
			<extension base="gml:AbstractFeatureType">
				<sequence>
					<element name="sourceLink" type="string" minOccurs="1" maxOccurs="1" />
				</sequence>
			</extension>
		</complexContent>
	</complexType>

	<!-- Target Type -->
	<complexType name="TargetType">
		<complexContent>
			<extension base="gml:AbstractFeatureType">
				<sequence>
					<element name="targetLink" type="string" minOccurs="1" maxOccurs="1" />
				</sequence>
			</extension>
		</complexContent>
	</complexType>
</schema>
