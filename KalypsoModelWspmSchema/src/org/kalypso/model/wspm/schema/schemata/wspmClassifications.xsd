<schema xmlns:gml="http://www.opengis.net/gml" xmlns:om="http://www.opengis.net/om" xmlns:common="org.kalypso.gml.common" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:wspmClasses="org.kalypso.model.wspm.classifications" targetNamespace="org.kalypso.model.wspm.classifications" elementFormDefault="qualified" version="0.1">

  <import namespace="http://www.opengis.net/gml" />
  <import namespace="http://www.opengis.net/om" />
  <import namespace="org.kalypso.gml.common" />

  <element name="classificationMember" type="wspmClasses:ClassificationMemberPropertyType" />
  <complexType name="ClassificationMemberPropertyType">
    <sequence>
      <element ref="wspmClasses:WspmClassification" />
    </sequence>
    <attributeGroup ref="gml:AssociationAttributeGroup" />
  </complexType>


  <element name="WspmClassification" type="wspmClasses:ClassificationType" substitutionGroup="gml:_Feature" />
  <complexType name="ClassificationType">
    <complexContent>
      <extension base="gml:AbstractFeatureType">
        <sequence>
          <element name="roughnessClasses" type="wspmClasses:RoughnessClassPropertyType" minOccurs="0" maxOccurs="unbounded" />
          <element name="vegetationClasses" type="wspmClasses:VegetationClassPropertyType" minOccurs="0" maxOccurs="unbounded" />
          <element name="codeClasses" type="wspmClasses:CodeClassPropertyType" minOccurs="0" maxOccurs="unbounded" />
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <element name="AbstractClassification" type="wspmClasses:AbstractClassificationType" substitutionGroup="gml:_Feature" />
  <complexType name="AbstractClassificationType">
    <complexContent>
      <extension base="gml:AbstractFeatureType">
        <sequence>
          <element type="string" name="comment" minOccurs="0" />
          <element type="common:color" name="color" />
        </sequence>
      </extension>
    </complexContent>
  </complexType>



  <complexType name="RoughnessClassPropertyType">
    <sequence minOccurs="0">
      <element ref="wspmClasses:RoughnessClass" minOccurs="0" maxOccurs="1" />
    </sequence>
    <attributeGroup ref="gml:AssociationAttributeGroup" />
  </complexType>


  <element name="RoughnessClass" type="wspmClasses:RoughnessClassType" substitutionGroup="wspmClasses:AbstractClassification" />
  <complexType name="RoughnessClassType">
    <complexContent>
      <extension base="wspmClasses:AbstractClassificationType">
        <sequence>
          <element type="decimal" name="ksValue" />
          <element type="decimal" name="kstValue" />
        </sequence>
      </extension>
    </complexContent>
  </complexType>

  <complexType name="VegetationClassPropertyType">
    <sequence minOccurs="0">
      <element ref="wspmClasses:VegetationClass" minOccurs="0" maxOccurs="1" />
    </sequence>
    <attributeGroup ref="gml:AssociationAttributeGroup" />
  </complexType>

  <element name="VegetationClass" type="wspmClasses:VegetationClassType" substitutionGroup="wspmClasses:AbstractClassification" />
  <complexType name="VegetationClassType">
    <complexContent>
      <extension base="wspmClasses:AbstractClassificationType">
        <sequence>
          <element type="decimal" name="ax" />
          <element type="decimal" name="ay" />
          <element type="decimal" name="dx" />
        </sequence>
      </extension>
    </complexContent>
  </complexType>


  <complexType name="CodeClassPropertyType">
    <sequence minOccurs="0">
      <element ref="wspmClasses:CodeClass" minOccurs="0" maxOccurs="1" />
    </sequence>
    <attributeGroup ref="gml:AssociationAttributeGroup" />
  </complexType>

  <element name="CodeClass" type="wspmClasses:CodeClassType" substitutionGroup="wspmClasses:AbstractClassification" />
  <complexType name="CodeClassType">
    <complexContent>
      <extension base="wspmClasses:AbstractClassificationType">
        <sequence>
        </sequence>
      </extension>
    </complexContent>
  </complexType>
</schema>
