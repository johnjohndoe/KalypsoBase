<OperationsMetadata xmlns="http://www.opengis.net/ows">
<Operation name="GetChart">
<DCP>
    <HTTP>
        <Get xlink:href="http://www.example.org/ods?">
        </Get>
    </HTTP>
</DCP>  
 <Parameter name="NAME">  
      <Value>Wasserstand</Value>
     <Value>Niederschlag</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">paramater defining the chart to be returned as an image file</ODSMetaData>
        </Metadata> 
    </Parameter>
 <Parameter name="WIDTH">  
     <Value>200</Value>
     <Value>2000</Value>
     <Metadata>
         <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">parameter defining width of requested chart image; value should be something in between those two given above; if no value is spezified, a default value will be used</ODSMetaData>
     </Metadata> 
 </Parameter>
   <Parameter name="HEIGHT">  
        <Value>200</Value>
        <Value>2000</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">parameter defining height of requested chart image; value should be something in between those two given above; if no value is spezified, a default value will be used</ODSMetaData>
        </Metadata> 
   </Parameter>
    <Parameter name="LAYERS">
        <Value>all</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">
                sorted list of layers to be displayed in chart image; indivudual layers are separated by semicolon; use layers id from diagrams section as identifier; layers mentioned first are drawn first;
                if parameter is omitted, all layers are drawn 
            </ODSMetaData>
        </Metadata>
    </Parameter>
    <Parameter name="TYPE">  
        <Value>PNG</Value>
        <Value>JPG</Value>
        <Value>GIF</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">paramater defining the type of the image to return; PNG is default</ODSMetaData>
        </Metadata> 
    </Parameter>
    <Parameter name="TRANSPARENT">  
        <Value>TRUE</Value>
        <Value>FALSE</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">paramater defining if the returned image should be transparent, FALSE is default</ODSMetaData>
        </Metadata> 
    </Parameter>
</Operation>
<Operation name="GetLegend">
    <DCP>
        <HTTP>
            <Get xlink:href="http://www.example.org/ods?">
            </Get>
        </HTTP>
    </DCP>  
    <Parameter name="NAME">  
        <Value>Wasserstand</Value>
        <Value>Niederschlag</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">paramater defining the legend to be returned as an image file</ODSMetaData>
        </Metadata> 
    </Parameter>
    <Parameter name="LAYERS">
        <Value>all</Value>
        <Metadata>
            <ODSMetaData xmlns="http://www.openali.de/ods/capabilities/xsd">
                sorted list of layers to be displayed in legend image; indivudual layers are separated by semicolon; use layers id from diagrams section as identifier; layers mentioned first are drawn first;
                if parameter is omitted, all layers are drawn 
            </ODSMetaData>
        </Metadata>
    </Parameter>
</Operation>
