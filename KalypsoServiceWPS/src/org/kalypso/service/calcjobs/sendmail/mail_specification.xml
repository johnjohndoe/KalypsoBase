<?xml version="1.0" encoding="UTF-8"?>
<modelspec xmlns="simspec.core.simulation.kalypso.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" typeID="SendMailV1.0">

	<!-- Input -->
	<input id="SENDER" type="xs:string" description="The e-mail adress of the sender." />
	<input id="RECEIVER" type="xs:string" description="The e-mail adress of the receiver." />
	<input id="TYPE" type="xs:string" description="The type of the e-mail." />
	<input id="TITLE" type="xs:string" description="The title of the e-mail." />
	<input id="TEXT" type="xs:string" description="The text body of the e-mail." />

	<!-- Output -->
	<output id="RESULT" type="xs:string" description="The result of the operation." />

	<!-- Output des CalcJobs -->
	<output id="SimulationLog" description="The log of the simulation." />
</modelspec>