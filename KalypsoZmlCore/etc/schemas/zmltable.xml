<?xml version="1.0" encoding="UTF-8"?>
<ZmlTable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="schema.table.ui.zml.kalypso.org" xsi:schemaLocation="schema.table.ui.zml.kalypso.org zmltable.xsd ">

  <defaultStyle>
    <url>urn:org:kalypso:zml:ui:table:style:base#defaultCellStyle</url>
  </defaultStyle>

  <toolbar>toolbar:org.kalypso.hwv.product.sachsenanhalt.zml.table.menu.toolbar.sum</toolbar>

  <Columns>
    <!-- date column -->
    <IndexColumn autopack="true" id="date">
      <property name="label">Datum</property>
      <property name="alignment">LEFT</property>

      <defaultCellStyle>
        <url>urn:org:kalypso:zml:ui:table:global#dateCellStyle</url>
      </defaultCellStyle>

      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleForecast</url>
      </rule>
    </IndexColumn>


    <!-- ombrometer -->
    <DataColumn editable="true" id="N_OMBROMETER" metadataSource="true">
      <property name="label">Ombrometer/LM2</property>
      <property name="width">100</property>
      <property name="alignment">RIGHT</property>

      <defaultCellStyle>
        <url>urn:org:kalypso:zml:ui:table:global#nBaseCellStyle</url>
      </defaultCellStyle>

      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleUserModified</url>
      </rule>
      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleInterpolatedValue</url>
      </rule>

      <indexAxis>date</indexAxis>
      <valueAxis>N</valueAxis>
    </DataColumn>

    <!-- Radolan -->
    <DataColumn editable="true" id="N_RADOLAN" metadataSource="true">
      <property name="label">Radolan/LM2</property>
      <property name="width">100</property>
      <property name="alignment">RIGHT</property>

      <defaultCellStyle>
        <url>urn:org:kalypso:zml:ui:table:global#nBaseCellStyle</url>
      </defaultCellStyle>

      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleUserModified</url>
      </rule>
      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleInterpolatedValue</url>
      </rule>

      <indexAxis>date</indexAxis>
      <valueAxis>N</valueAxis>
    </DataColumn>


    <!-- ombrometer -->
    <DataColumn editable="true" id="N_SNOW" metadataSource="true">
      <property name="label">SNOW4</property>
      <property name="width">100</property>
      <property name="alignment">RIGHT</property>

      <defaultCellStyle>
        <url>urn:org:kalypso:zml:ui:table:global#nBaseCellStyle</url>
      </defaultCellStyle>

      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleUserModified</url>
      </rule>
      <rule>
        <url>urn:org:kalypso:zml:ui:table:global#ruleInterpolatedValue</url>
      </rule>

      <indexAxis>date</indexAxis>
      <valueAxis>N</valueAxis>
    </DataColumn>

  </Columns>
</ZmlTable>
