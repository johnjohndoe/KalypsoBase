<?xml version="1.0" encoding="UTF-8"?>
<ChartConfiguration xmlns="http://www.openali.de/odysseus/chartconfig/0.2.0/">
  <Chart id="volume">
    <Styles>
      <AreaStyle role="mean_temperature_area_0">
        <Alpha>64</Alpha>
        <Fill>
          <ColorFill>
            <Color>FF0000</Color>
          </ColorFill>
        </Fill>
        <Stroke isVisible="false">
          <Width>1</Width>
          <LineColor>FF0000</LineColor>
        </Stroke>
      </AreaStyle>
      <AreaStyle role="mean_temperature_area_1">
        <Alpha>64</Alpha>
        <Fill>
          <ColorFill>
            <Color>FF8644</Color>
          </ColorFill>
        </Fill>
        <Stroke isVisible="false">
          <Width>1</Width>
          <LineColor>FF8644</LineColor>
        </Stroke>
      </AreaStyle>
      <AreaStyle role="mean_temperature_area_2">
        <Alpha>64</Alpha>
        <Fill>
          <ColorFill>
            <Color>FF4775</Color>
          </ColorFill>
        </Fill>
        <Stroke isVisible="false">
          <Width>1</Width>
          <LineColor>FF4775</LineColor>
        </Stroke>
      </AreaStyle>
    </Styles>
    <Layers>
      <Layer id="MEAN_TEMPERATURE">
        <Title>Tages-Temperatur [°C]</Title>
        <Layers>
            <DerivedLayer id="Stuetzstellen" legend="false" visible="false">
            <Description />
            <LayerReference url="urn:org:kalypso:zml:ui:diagramm:common:quality#Stuetzstellen"></LayerReference>
          </DerivedLayer>
          <DerivedLayer id="Fehlwert" legend="false" visible="false">
            <Description />
            <LayerReference url="urn:org:kalypso:zml:ui:diagramm:common:quality#Fehlwerte"></LayerReference>
          </DerivedLayer>

          <Layer id="TEMPERATURE" visible="true" legend="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
            <Provider epid="org.kalypso.zml.ui.chart.layer.provider.ZmlBarLayerProvider">
              <Parameters>
                <Parameter name="supportsMultiSelect" value="true" />
              </Parameters>
            </Provider>
            <Title>Tages-Temperatur</Title>
            <Description />
            <Styles>
              <StyleReference>urn:org:kalypso:zml:ui:diagramm:common:mean:temperature#mean_temperature_area_0</StyleReference>
              <StyleReference>urn:org:kalypso:zml:ui:diagramm:common:mean:temperature#mean_temperature_area_1</StyleReference>
              <StyleReference>urn:org:kalypso:zml:ui:diagramm:common:mean:temperature#mean_temperature_area_2</StyleReference>
            </Styles>
          </Layer>

          <LayerReference url="urn:org:kalypso:zml:ui:diagramm:grid#grid" />
        </Layers>
        <MapperRefs>
          <DomainAxisRef url="urn:org:kalypso:zml:ui:diagramm:global#date" />
          <TargetAxisRef url="urn:org:kalypso:zml:ui:diagramm:common:mean:temperature#MEAN_TEMPERATURE" />
        </MapperRefs>
      </Layer>
    </Layers>
    <Mappers>
      <Axis id="MEAN_TEMPERATURE" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
        <Provider epid="de.openali.odysseus.chart.ext.axis.provider.GenericLinear" />
        <Label>Tages-Temperatur [°C]</Label>
        <Direction>POSITIVE</Direction>
        <Position>RIGHT</Position>
        <PreferredAdjustment before="0" range="50" after="50" fixMinRange="1.0" />
        <RendererRef ref="AutoNumberAxisRenderer" />
        <AxisNumberRangeRestriction absoluteMinValue="0.0" minRange="0.1" fixMinValue="true" />
      </Axis>
    </Mappers>
  </Chart>
</ChartConfiguration>