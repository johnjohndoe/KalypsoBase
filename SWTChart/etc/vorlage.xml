<chart>
    <layers>

        <!-- die Reihenfolge der layer-Elemente definiert die Position
             in der GUI -->

        <!-- 
        
        profilLayer und tsLayer haben etwas gemeinsam: die Grunddaten sind Observations
        
         -->

        <!-- Profildaten Beispiel -->
        <layer id="layer1" visible="true" type="org.kalypso.chart.profilLayer">
            <name>Querprofil Rhein (KM 130)</name>
            <data>
                <!-- layer specific information -->
                <source href="profile.xml"/>
                <rangeAxis name="Breite"/>
                <valueAxis name="Hoehe"/>
            </data>
        </layer>

        <!-- WSP im Querprofil Beispiel -->
        <layer id="layer2" visible="true" type="org.kalypso.chart.profilWspLayer">
            <name>WSP HQ100</name>
            <data>
                <!-- die WSP braucht zwei Quellen:
                - der Querprofil
                - die O&M mit die WSP
                
                die Datenschicht weisst dass der Querprofil schon geladen
                ist und managet die Abhängigkeit (ändert sich die Geometrie
                des Querprofils, so muss die WSP auch angepasst werden, z.B.
                eventuell verlängert damit sie wieder zum Gelände passt).
                
                NB: sollte der WSP eigentlich ein Längsschnitt sein,
                dann braucht man noch eine Stationierung, sollte sie
                nicht im Querprofil vorhanden sein.
                 -->
                <source href="profile.xml"/>
                <source href="resultHQ100.om"/>
                <resultColumn name="wsp"/>
            </data>
        </layer>


        <!-- Zeitreihe Beispiel -->
        <layer id="l2" visible="false" type="org.kalypso.chart.tsLayer">
            <name>Pegel Gösnotz</name>
            <data>
                <source href="goesnotz.om"/>
                <rangeAxis name="Datum"/>
                <valueAxis name="W"/>
            </data>
        </layer>

    </layers>

    <styles> </styles>

    <mapping> </mapping>
</chart>
